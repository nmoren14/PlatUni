@model int

@{
    ViewData["Title"] = "Inscripción de Cursos";
}

<h1>Inscripción de Cursos para el Estudiante @ViewBag.Student</h1>


@Html.ValidationSummary()
@using (Html.BeginForm("InscribirM", "Students", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Seleccione cursos para inscribir:", "Seleccione Curso", new { @class = "control-label" })

        @Html.DropDownList("courseId", (SelectList)ViewBag.CourseList, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="hidden" name="studentId" value="@ViewBag.StudentId" />
        <input type="submit" value="Inscribir Cursos" class="btn btn-primary" />
    </div>
}

<div style="margin-top: 10%;">
    <a asp-action="Index" asp-controller="Home">Inicio</a>|<a asp-action="Index" asp-controller="Students">Volver</a>
</div>
