@{
    ViewData["Title"] = "Inicio";
}

<div class="jumbotron">
    <div class="container">
        <h1 class="display-4">¡Bienvenido a la Universidad!</h1>
        <p class="lead">Explora nuestros programas académicos y descubre una educación de calidad.</p>
