@model PlatUni.Models.Professor

<h2>Editar Profesor</h2>

<form asp-action="Edit" asp-route-id="@Model.ProfessorId">
    <div class="form-group">
        <label asp-for="FirstName">Nombre:</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Apellido:</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Primera Clase:</label>
        <select id="FisrtClass" asp-for="FisrtClass" class="form-control FirstClass" name="FirstClass">
            <option value="">Seleccione una opción</option>
            @foreach (var course in ViewBag.Courses)
            {
                <option value="@course.Value">@course.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Segunda Clase:</label>
        <select id="SecondClass" asp-for="SecondClass" class="form-control SecondClass" name="SecondClass">
            <option value="">Seleccione una opción</option>
            @foreach (var course in ViewBag.Courses)
            {
                <option value="@course.Value">@course.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
@section Scripts {
    <script>
        $(document).ready(function () {
            // Deshabilitar opciones al cargar la página
            disableOptions();

            // Manejar cambios en los dropdowns de clase
            $('.FirstClass, .SecondClass').change(function () {
                disableOptions();
            });

            // Función para deshabilitar opciones en base a la selección
            function disableOptions() {
                var firstSelected = $('.FirstClass').val();
                var secondSelected = $('.SecondClass').val();

                // Habilitar todas las opciones
                $('.FirstClass option, .SecondClass option').prop('disabled', false);

                // Deshabilitar opciones seleccionadas en el otro dropdown
                if (firstSelected) {
                    $('.SecondClass option[value="' + firstSelected + '"]').prop('disabled', true);
                }
                if (secondSelected) {
                    $('.FirstClass option[value="' + secondSelected + '"]').prop('disabled', true);
                }
            }
        });
    </script>
}